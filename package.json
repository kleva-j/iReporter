{
  "name": "ireporter",
  "version": "1.0.0",
  "description": "iReporter enables any/every citizen to bring any form of corruption to the notice of appropriate authorities and the general public.",
  "main": "app.js",
  "scripts": {
    "test": "NODE_ENV=test nyc mocha --timeout 10000 --compilers js:babel-core/register server/test/**.spec.js --exit",
    "start": "npm run build && node dist/app.js",
    "dev": "NODE_ENV=development nodemon --exec babel-node server/app.js",
    "build": "npm run clean && babel server --out-dir ./dist",
    "clean": "rm -rf dist && mkdir dist",
    "coveralls": "npm test && nyc --reporter=lcov --reporter=text-lcov",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "db:setup": "babel-node server/models/createTable --exit",
    "testdb:setup": "NODE_ENV=test babel-node server/models/createTable --exit",
    "debug": "node --inspect-brk ./dist/app.js"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "engines": {
    "node": "10.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kleva-j/iReporter.git"
  },
  "keywords": [
    "iReporter",
    "Reporter"
  ],
  "author": "Michael Obasi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kleva-j/iReporter/issues"
  },
  "homepage": "https://github.com/kleva-j/iReporter#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "jsend": "^1.0.2",
    "jsonwebtoken": "^8.4.0",
    "morgan": "^1.9.1",
    "nyc": "^13.1.0",
    "pg-promise": "^8.5.3",
    "uuid": "^3.3.2",
    "validator": "^10.9.0"
  },
  "browserslist": "> 0.25%, not dead"
}
